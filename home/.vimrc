execute pathogen#infect()

set nocompatible
set backspace=indent,eol,start

" Enable filetype plugins
filetype plugin on
filetype indent on

" Set to auto read when a file is changed from the outside
set autoread

" Enable syntax highlighting
syntax enable

" Replace tabs by spaces
set expandtab
set smarttab

set showcmd
set showmode

" Color scheme
set background=dark

" Always show current position
set ruler

" show line number
set number

set shiftwidth=4
set tabstop=4
set laststatus=2

highlight LineNr term=bold cterm=NONE ctermbg=LightGrey ctermfg=DarkGrey

